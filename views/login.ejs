<body>
    <% if(error){%>
        <script>
            alert("<%= error %>");
        </script>
    <% } %>
    <main>
        <div id="login-left">
            <img src="/imgs/icons/login.png" alt="">
        </div>
        
        <div id="login-right">
            <div id="login">
                <div>
                    <h1>Welcome </h1>
                </div>
                <div>
                    <form action="/auth/login" method="POST">
