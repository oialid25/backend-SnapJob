                        <button id="submit-button" type="submit">Log In</button>
                        <p id="middle-login">OR</p>
                        <div id="or-methods">
                            <img src="/imgs/icons/google (1).png" alt="">
                            <img src="/imgs/icons/facebook.png" alt="">
                            <img src="/imgs/icons/mac-os-logo.png" alt="">
                        </div>
                    </form>
                </div>
            </div>
            

        </div>
